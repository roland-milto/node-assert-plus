{
  "author": "Roland Milto (https://roland.milto.de/)",
  "contributors": [
    "Roland Milto (https://roland.milto.de/)"
  ],
  "homepage": "https://roland.milto.de/projekte/argument-assertions#node-assert-plus",
  "name": "@argument-assertions/node-assert-plus",
  "version": "2026.1.14",
  "license": "MIT",
  "description": "Node.js assertion library on top of the built-in assert module with strict and flexible validation. Much more secure and up to 10 times faster than the original 'node-assert-plus', 80 % less CPU usage and memory consumption.",
  "repository": {
    "type": "git",
    "url": "https://github.com/roland-milto/node-assert-plus.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/roland-milto/node-assert-plus/issues"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "dependencies": {
    "@type-check/guards": "*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsdown": "^0.19.0-beta.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "npm run build:npm",
    "build:npm": "tsdown --name NPM --dts true --sourcemap true --unbundle true --no-clean",
    "watch": "tsdown --name DEV --unbundle true --no-clean --watch",
    "build:typescript": "tsc -p tsconfig.json && npm run build:typescript",
    "watch:typescript": "tsc -w -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "tsdown": {
    "input": "src/index.ts",
    "treeshake": false,
    "external": [
      "react",
      "react-dom",
      "vue",
      "/^lodash/",
      "/^@mui/"
    ]
  },
  "keywords": [
    "assert",
    "assert plus",
    "assertion",
    "assertion library",
    "assertions",
    "asserts",
    "asserts plus",
    "data validation",
    "datatype validation",
    "nodejs",
    "runtime assertion",
    "testing",
    "testings",
    "testing library",
    "type check",
    "type-check",
    "typescript",
    "validation"
  ]
}